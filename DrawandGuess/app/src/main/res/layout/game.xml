<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B97A56"
    tools:context=".game"
    tools:layout_editor_absoluteY="25dp">


    <Button
        android:id="@+id/weight_change_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/blue_circle_button"
        android:onClick="click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/color_change_button"
        app:layout_constraintTop_toBottomOf="@+id/layout_paint_board"
        app:layout_constraintVertical_bias="0.186"
        tools:ignore="MissingConstraints" />

    <devdon.com.painter.PaintBoard
        android:id="@+id/layout_paint_board"
        android:layout_width="687dp"
        android:layout_height="257dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/clean_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:onClick="click"
        android:text="@string/clearn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Dialog_box"
        app:layout_constraintTop_toBottomOf="@+id/layout_paint_board"
        app:layout_constraintVertical_bias="0.179"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/color_change_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/red_circle_button"
        android:onClick="click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clean_button"
        app:layout_constraintTop_toBottomOf="@+id/layout_paint_board"
        app:layout_constraintVertical_bias="0.186"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        android:min="0"
        android:progress="10"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="367dp" />

    <TextView
        android:id="@+id/paint_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10f"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="707dp"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:background="@drawable/ring"
        android:text="返回"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/layout_paint_board"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

