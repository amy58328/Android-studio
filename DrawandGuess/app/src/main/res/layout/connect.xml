<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B97A56"
    tools:context=".connect">


    <Button
        android:id="@+id/weight_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:onClick="click"
        android:background="#B97A56"
        android:text="10f"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/color_button"
        app:layout_constraintTop_toBottomOf="@+id/layout_paint_board"
        tools:ignore="MissingConstraints" />

    <devdon.com.painter.PaintBoard
        android:id="@+id/layout_paint_board"
        android:layout_width="610dp"
        android:layout_height="254dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/clean_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle2"
        android:onClick="click"
        android:text="@string/clearn"
        app:layout_constraintStart_toEndOf="@+id/save_button"
        app:layout_constraintTop_toBottomOf="@+id/layout_paint_board"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/color_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/black_circle_button"
        android:onClick="click"
        app:layout_constraintStart_toEndOf="@+id/clean_button"
        app:layout_constraintTop_toBottomOf="@+id/layout_paint_board"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/goback_button"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:background="@drawable/ring"
        android:text="返回"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/eraser_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:padding="0dp"
        android:onClick="click"
        app:layout_constraintStart_toEndOf="@+id/weight_button"
        app:layout_constraintTop_toBottomOf="@+id/layout_paint_board"
        app:srcCompat="@drawable/eraser" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle2"
        android:onClick="click"
        android:text="@string/save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_paint_board"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>