<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B97A56"

    tools:context=".normal">

    <Button
        android:id="@+id/prompt"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="click"
        android:text="提示"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_button" />

    <Button
        android:id="@+id/goback_button"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/ring"
        android:text="返回"
        android:onClick="click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <ImageView
        android:id="@+id/blink"
        android:layout_width="494dp"
        android:layout_height="263dp"
        android:background="#FFFFFF"
        android:gravity="left"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/Dialog_box2"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/edit_text"
        android:hint="對話框"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blink"
        app:layout_constraintRight_toLeftOf="@+id/enter_button"/>

    <Button
        android:id="@+id/enter_button"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:text="輸入"
        android:onClick="click"
        app:layout_constraintTop_toBottomOf="@+id/blink"
        app:layout_constraintLeft_toRightOf="@+id/Dialog_box2"
        app:layout_constraintTop_toTopOf="@+id/Dialog_box2"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:onClick="click"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="下一題"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goback_button" />

    <Button
        android:id="@+id/answer_button"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="答案"
        android:onClick="click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_button" />



</androidx.constraintlayout.widget.ConstraintLayout>